require_root() {
  if [[ "${EUID:-$(id -u)}" -ne 0 ]]; then
    err "Ce script doit √™tre ex√©cut√© en root (sudo)."
    exit 1
  fi
}

require_cmd() {
  local miss=()
  for c in "$@"; do command -v "$c" >/dev/null 2>&1 || miss+=("$c"); done
  if ((${#miss[@]})); then err "Commandes manquantes: ${miss[*]}"; exit 1; fi
}

