# ðŸŽ¨ Couleurs
RED="\033[31m"; GREEN="\033[32m"; YELLOW="\033[33m"; BLUE="\033[34m"
MAGENTA="\033[35m"; CYAN="\033[36m"; BOLD="\033[1m"; RESET="\033[0m"

# ðŸ“ Logging
LOGFILE="/var/log/neomnia-setup.log"
mkdir -p "$(dirname "$LOGFILE")"; touch "$LOGFILE" || LOGFILE="/tmp/neomnia-setup.log"

log()  { echo -e "${CYAN}[Neomnia]${RESET} $*"; echo "[$(date '+%F %T')] $*" >>"$LOGFILE"; }
ok()   { log "${GREEN}âœ”${RESET} $*"; }
warn() { log "${YELLOW}âš ${RESET} $*"; }
err()  { log "${RED}âœ–${RESET} $*"; }

trap 'err "Erreur (ligne ${BASH_LINENO[0]}). Consulte $LOGFILE."' ERR

# ðŸŒ€ Spinner
spinner() { local pid=$1; local spin='|/-\'; while kill -0 "$pid" 2>/dev/null; do for c in $spin; do printf "\r${CYAN}[Neomnia]${RESET} â³ %c " "$c"; sleep 0.1; done; done; printf "\r"; }
run_with_spinner() { log "$1"; shift; ("$@" >>"$LOGFILE" 2>&1)& spinner $!; wait $!; ok "$1 terminÃ©."; }

# ðŸ”¡ Fonctions input
ask_nonempty() { local val; while :; do read -rp "$1" val; [[ -n "${val// }" ]] && { echo "$val"; return; }; echo "Valeur requise."; done; }
ask_secret() { local v1 v2; while :; do read -srp "$1" v1; echo; read -srp "Confirme la clÃ© : " v2; echo; [[ "$v1" == "$v2" && -n "${v1// }" ]] && { echo "$v1"; return; }; echo "Les valeurs ne correspondent pas."; done; }

# ðŸš€ Demandes utilisateur (toujours en tout dÃ©but)
GROUP_NAME="$(ask_nonempty 'ðŸ‘‰ Nom du groupe Ã  crÃ©er : ')"
GH_TOKEN="$(ask_secret   'ðŸ‘‰ ClÃ© API GitHub (masquÃ©e) : ')"

# âš¡ PrÃ©requis
if [[ $EUID -ne 0 ]]; then err "Ce script doit Ãªtre lancÃ© en root."; exit 1; fi

export DEBIAN_FRONTEND=noninteractive
run_with_spinner "Mise Ã  jour APT" apt-get update -y
run_with_spinner "Upgrade systÃ¨me" apt-get upgrade -y
run_with_spinner "Installation outils" apt-get install -y curl git ufw tree wget jq acl

# ðŸ‘¥ GitHub CLI
if ! command -v gh >/dev/null; then
  run_with_spinner "Installation GitHub CLI" bash -c "
    apt-get install -y curl gnupg &&
    curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | tee /usr/share/keyrings/githubcli-archive-keyring.gpg >/dev/null &&
    echo 'deb [arch=\$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main' > /etc/apt/sources.list.d/github-cli.list &&
    apt-get update -y &&
    apt-get install -y gh
  "
fi

# ðŸ” Auth GitHub â†’ via env, pas de blocage
log "Authentification GitHub via tokenâ€¦"
export GITHUB_TOKEN="$GH_TOKEN"

# VÃ©rif
if ! gh api user >/dev/null 2>&1; then
  if ! curl -fsS -H "Authorization: token ${GH_TOKEN}" https://api.github.com/user >/dev/null; then
    err "Ã‰chec de l'authentification GitHub."
    exit 1
  fi
fi
ok "Authentification GitHub validÃ©e."

# ðŸ‘¥ Groupe
AZ_USER="${SUDO_USER:-$(whoami)}"
if getent group "$GROUP_NAME" >/dev/null; then
  warn "Groupe $GROUP_NAME dÃ©jÃ  existant."
else
  run_with_spinner "CrÃ©ation du groupe $GROUP_NAME" groupadd "$GROUP_NAME"
fi
[[ -n "$AZ_USER" ]] && run_with_spinner "Ajout de $AZ_USER au groupe $GROUP_NAME" usermod -a -G "$GROUP_NAME" "$AZ_USER"

# ðŸ“ ACL
mkdir -p /opt
run_with_spinner "ACL sur /opt" bash -c "
  chown -R root:${GROUP_NAME} /opt &&
  chmod -R 2775 /opt &&
  setfacl -R -m g:${GROUP_NAME}:rwx /opt &&
  setfacl -dR -m g:${GROUP_NAME}:rwx /opt
"

# ðŸ”¥ UFW
ufw allow OpenSSH >/dev/null 2>&1 || true
ufw --force enable

# âœ… Fin
ok "Groupe ${GROUP_NAME} prÃªt."
ok "GitHub CLI configurÃ© avec token."
ok "Journal dispo : ${LOGFILE}"
